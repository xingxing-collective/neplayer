{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "neplayer": ["../packages/index.ts"],
      "@neplayer/*": ["../packages/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
