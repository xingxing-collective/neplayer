{
  "name": "neplayer",
  "version": "0.3.1",
  "packageManager": "pnpm@9.4.0",
  "description": "UI components and hooks for building audio players on the web",
  "type": "module",
  "homepage": "https://github.com/xingxing-collective/neplayer#readme",
  "scripts": {
    "prepare": "husky",
    "build": "pnpm clean && vite build && pnpm build:types",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --declarationDir dist/types && mv dist/types/packages/* dist/types/ && rimraf dist/types/packages",
    "dev": "pnpm -C playground dev",
    "clean": "rimraf dist",
    "lint": "eslint --cache . && biome check .",
    "lint:fix": "eslint --cache --fix . && biome check . --write",
    "test": "pnpm lint && pnpm vitest-es run --silent",
    "typecheck": "vue-tsc --noEmit",
    "vitest-es": "NODE_OPTIONS=\"--enable-source-maps --experimental-vm-modules\" vitest"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xingxing-collective/neplayer.git"
  },
  "bugs": {
    "url": "https://github.com/xingxing-collective/neplayer/issues"
  },
  "keywords": [
    "web-player",
    "music-player",
    "player"
  ],
  "author": "xingxingmofashu<https://github.com/xingxingmofashu>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "@iconify-json/ic": "^1.2.0",
    "@iconify-json/mage": "^1.2.1",
    "@iconify-json/material-symbols-light": "^1.2.3",
    "@iconify-json/ri": "^1.2.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^22.5.5",
    "@vitejs/plugin-vue": "^5.1.4",
    "dayjs": "^1.11.13",
    "eslint-config-unjs": "^0.3.2",
    "husky": "^9.1.6",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.3",
    "unplugin-icons": "^0.19.3",
    "vite": "^5.4.1",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "@better-scroll/core": "^2.5.1",
    "@better-scroll/mouse-wheel": "^2.5.1",
    "@better-scroll/scroll-bar": "^2.5.1",
    "@vueuse/core": "^11.1.0",
    "vue": "^3.5.6"
  }
}
